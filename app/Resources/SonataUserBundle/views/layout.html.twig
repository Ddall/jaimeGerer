{% extends '::base.html.twig' %}

{% block body %}
        {% if app.request.hasPreviousSession %}
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="flash-{{ type }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endif %}

	<div class="container-fluid">

    	<div class="row center">
    		<div class="col-md-12">

          <!-- xmas gif -->
          {% if ("now"|date('md')) > 1212 and ("now"|date('md') < 1225) %}
            <p><img src="{{ asset('images/assets/xmas_santa.gif') }}" alt="Le père Noël" title="Toute l'équipe de J'aime Gérer vous souhaite un joyeux Noël !" /></p>
          {% endif %}

	   	 		{% block fos_user_content %}{% endblock %}
	   	 	</div>
	    </div>

    </div>
{% endblock %}
