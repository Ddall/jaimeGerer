{% extends "FOSUserBundle::layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
	{% if error %}
	     <div class="alert alert-danger">{{ error|trans({'Bad credentials': 'Mauvais login ou mot de passe'}) }}</div>
	{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post" id="login_form">
   
    <div class="form-group">
		 <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    	<label for="username">Adresse email</label><br />
    	<input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
    </div>
	<div class="form-group">
    	<label for="password">Mot de passe</label><br />
   	 <input type="password" id="password" name="_password" required="required" />
	</div>
	<div class="form-group">
    	<input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    	<label for="remember_me">Se souvenir de moi</label>
	</div>
	<div class="form-group">
    	<input type="submit" id="_submit" name="_submit" value="Connexion" class="btn btn-success btn-lg"/>
	</div>
   </form>
   
   <p> <a href="{{ path('fos_user_resetting_request') }}">Mot de passe oubli√© ?</a> </p>
{% endblock fos_user_content %}
