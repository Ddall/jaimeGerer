<div class="modal-header">
	<a class="close" data-dismiss="modal">×</a>
	<h3>Fusionner des mouvements bancaires</h3>
</div>

<div class="modal-body">

	<table class="table">
		<thead>
			<tr>
				<th>Date</th>
				<th>Libellé</th>
				<th>Montant</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>{{ mouvement.date|date('d/m/Y') }}</td>
				<td>{{ mouvement.libelle }}</td>
				<td><span class="mouvement-montant">{{ mouvement.montant }}</span> €</td>
			</tr>
		</tbody>
	</table>

	{{ form_start(form, {'action' : path('compta_mouvement_bancaire_fusionner', {'id' : mouvement.id } )} ) }}
	{{ form_errors(form) }}

	{{ form_row(form.fusion)}}
		
    <input type="submit" value="Valider" class="btn btn-success" />

    {{ form_rest(form) }}
	{{ form_end(form) }}
</div>
