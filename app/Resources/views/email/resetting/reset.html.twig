<style>

    .email-container {
        text-align: center;
        padding-left: 20px;
        padding-right: 20px;
        width: 600px;
        margin: auto;
        font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
        color: #333;
        line-height: 1.42857143;
        font-size: 14px;
    }

    .logo{
      margin-bottom: 30px;
    }

    p{
      margin: 0 0 20px;
    }

    a.btn-red,
    a.btn-red:active,
    a.btn-red:hover {
        background-color: #fc5061;
        color: #FFF;
        border-radius: 3px;
        padding: 15px;
        text-decoration: none;
        font-weight: bold;
    }

    .btn-wrapper{
      height: 20px;
      padding: 15px;
    }

    .apparte {
        background-color: #404040;
        color: #FFF;
        padding: 20px;

    }

    .signature {
        text-align: left;
        color: #555;
        border-top: #CCC 1px solid;
        margin-top: 20px;
        padding-top: 20px;
    }

    .small{
      font-size: 12px;
    }

