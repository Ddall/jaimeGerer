{{ form_start(form) }}
<div class="row">
    <div class="col-md-4 col-md-offset-1 center">
        <div class="form-group">
            {{ form_row(form.firstName) }}
        </div>
    </div>
    <div class="col-md-4 col-md-offset-1 center">
        <div class="form-group">
          {{ form_row(form.lastName) }}
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4 col-md-offset-1 center">
        <div class="form-group">
          {{ form_row(form.email) }}
        </div>
    </div>
    <div class="col-md-4 col-md-offset-1 center">
        <div class="form-group">
            {{ form_label(form.tauxHoraire) }}
            <div class="input-group">
                {{ form_widget(form.tauxHoraire) }}<div class="input-group-addon">€ </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-4 col-md-offset-1 center">

        <div class="form-group">
            <strong>Activé</strong><br />
          {{ form_row(form.enabled) }}
        </div>

        <div class="form-group">
          <strong>Administrateur</strong><br />
          {{ form_row(form.admin) }}
        </div>
    </div>
    <div class="col-md-4 col-md-offset-1 center">
        <div class="form-group">
          {{ form_row(form.permissions) }}
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 center">
        <hr />
        <div class="form-group">
          {{ form_row(form.submit) }}
        </div>
    </div>
</div>

{{ form_rest(form) }}
{{ form_end(form) }}
