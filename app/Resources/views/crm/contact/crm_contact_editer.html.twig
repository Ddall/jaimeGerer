{% extends 'crm/crm_layout.html.twig' %}

{% block content %}

	<div class="row">
		<div class="col-md-12">
			<h1>Modifier un contact</h1>	
		</div>
	</div>
	
 	{% include 'crm/contact/crm_contact_form.html.twig' %}

{% endblock %}


{% block javascripts %}
	{{ parent() }}
	
	<script type="text/javascript">
		$(document).ready( function () {    
			$(".input-compte").change(function() {
				$.ajax({
					type: "POST",
					url: "/web/crm/compte/get_coordonnees/"+$(this).val(),
//					url: Routing.generate("crm_compte_get_coordonnees",{"nom":$(this).val()}),
					success: function(data) {
						$(".input-adresse").val(data.adresse);
						$(".input-codepostal").val(data.codePostal);
						$(".input-ville").val(data.ville);
						$(".input-region").val(data.region);
						$(".input-pays").val(data.pays);
						$(".input-telephone").val(data.telephone);
						$(".input-fax").val(data.fax);
					 }
				});
			});
		});
	</script>

{% endblock %}