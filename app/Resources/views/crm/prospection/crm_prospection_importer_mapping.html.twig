<div class="modal-content">
	<div class="modal-header">
		<a class="close" data-dismiss="modal">×</a>
		<h3>Importation de contacts mapping </h3>
	</div>
	<div class="modal-body">
	{{ form_start(form,  { 'action': path('crm_prospection_importer_mapping', {'id': prospection.id}), 'attr': {'data-async': '', 'data-target' : '#modal' } }) }}
	{{ form_errors(form) }}
	<div class="row">
		<div class="col-md-12">
			<p>Faites correspondre les colonnes de {% if index > 1 %} vos fichiers {% else %} votre fichier {% endif %} aux données à importer.</p>
		</div>
	{% for i in 0..index %}
		<hr />	
		<div class="form-group col-md-12">
			Fichier : {{ form_label(form['filepath' ~ i]) }}
		</div>
		<hr />
		<div class="form-group col-md-3">
			{{ form_label(form['compte' ~ i]) }}<br />
		    {{ form_errors(form['compte' ~ i]) }}
		    {{ form_widget(form['compte' ~ i]) }}  
		</div>
		
		<div class="form-group col-md-3">
			{{ form_label(form['nom' ~ i]) }}<br />
		    {{ form_errors(form['nom' ~ i]) }}
		    {{ form_widget(form['nom' ~ i]) }}  
		</div>
		
		<div class="form-group col-md-3">
			{{ form_label(form['prenom' ~ i]) }}<br />
		    {{ form_errors(form['prenom' ~ i]) }}
		    {{ form_widget(form['prenom' ~ i]) }}  
		</div>
		
		<div class="form-group col-md-3">
		   	{{ form_label(form['adresse' ~ i]) }}<br />
		    {{ form_errors(form['adresse' ~ i]) }}
		    {{ form_widget(form['adresse' ~ i]) }}  
		</div>
		
		<div class="form-group col-md-3">
		   	{{ form_label(form['telephoneFixe' ~ i]) }}<br />
		    {{ form_errors(form['telephoneFixe' ~ i]) }}
		    {{ form_widget(form['telephoneFixe' ~ i]) }}  
		</div>
		
		<div class="form-group col-md-3">
		   	{{ form_label(form['activite' ~ i]) }}<br />
		    {{ form_errors(form['activite' ~ i]) }}
		    {{ form_widget(form['activite' ~ i]) }}  
		</div>
		
		<div class="form-group col-md-3">
		   	{{ form_label(form['type' ~ i]) }}<br />
		    {{ form_errors(form['type' ~ i]) }}
		    {{ form_widget(form['type' ~ i]) }}  
		</div>
		
	{% endfor %}
	</div>
	<div class="row">
		<div class="col-md-12">
			{{ form_widget(form.submit) }} 
		</div>
	</div>
	{{ form_end(form) }}

	</div>
</div>
