{% extends 'crm/crm_layout.html.twig' %}

{% block content %}

    <div class="row">
        <h1>Modifier la r√©partition</h1>

        <div class="alert alert-info alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <p>
              <span class="glyphicon glyphicon-info-sign"></span>
              Ces informations vont permettre de remplir automatiquement votre
              <a class="alert-link" href="{{ path('compta_rapport_tableau_bord_index') }}">tableau de bord</a> dans <span class="jaimelacompta">J'aime la Compta</span>.
            </p>
        </div>

    </div>

    {{ form_start(form) }}
    <div class="row">

      <div class="col-md-1">
        {{ form_widget(form.date.day, {'attr' : {'class' : 'hidden'}}) }}
        {{ form_widget(form.date.month) }}
      </div>
      <div class="col-md-1">
        {{ form_widget(form.date.year) }}
      </div>
      <div class="col-md-2 montant">
          {{ form_widget(form.montantMonetaire) }}
      </div>

    </div>

    <div class="row">
        <div class="col-md-12">
          <hr />
        </div>
    </div>

    <div class="row">
        <div class="col-md-1">
          <p>
            <a class="btn" href="{{ path('crm_opportunite_voir', {'id' : opportuniteRepartition.opportunite.id }) }}">
                <span class="glyphicon glyphicon-chevron-left"></span>Annuler
            </a>
          </p>
        </div>
        <div class="col-md-1">
            <input type="submit" value="Valider" class="btn btn-success" />
        </div>
    </div>

    {{ form_rest(form) }}
    {{ form_end(form) }}

</div>

{% endblock %}
