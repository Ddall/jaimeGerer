{% extends 'crm/crm_layout.html.twig' %}

{% block content %}

	<div class="row">
		<div class="col-md-12">
			<h1>Supprimer une action commerciale</h1>	
		</div>
	</div>

	<div class="row">
		 
	    <div class="col-md-12">
	    	<p>Etes-vous sur de vouloir supprimer l'action commerciale "{{ actionCommerciale.nom }}" ?</p>
	    	{{ form_start(form) }}
 			{{ form_widget(form) }}
	   	 	
	   	 	 <a class="btn" href="{{ path('crm_action_commerciale_voir', {'id' : actionCommerciale.id }) }}">
       			<span class="glyphicon glyphicon-chevron-left"></span>Annuler
    		</a>
	   	 	<input type="submit" value="Supprimer" class="btn btn-danger" />
	   	 	{{ form_end(form) }}
	    </div>
    </div>

{% endblock %}