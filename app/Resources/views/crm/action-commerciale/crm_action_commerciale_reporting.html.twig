    </div>

{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('lib/amcharts/amcharts/amcharts.js') }}" type="text/javascript"></script>
    <script src="{{ asset('lib/amcharts/amcharts/funnel.js') }}" type="text/javascript"></script>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

    <script type="text/javascript">


        $(document).ready(function() {

            /* charts */
            {{ gc_draw(chartTauxTransformation, 'chart_taux_transformation_wrapper') }}
            {{ gc_draw(chartActionsCoAnalytique, 'chart_actions_co_analytique') }}
            {{ gc_draw(chartActionsCoRhoneAlpes, 'chart_actions_co_rhone_alpes') }}
            {{ gc_draw(chartActionsCoAnalytique3Mois, 'chart_actions_co_analytique_3_mois') }}
            {{ gc_draw(chartActionsCoRhoneAlpes3Mois, 'chart_actions_co_rhone_alpes_3_mois') }}
            {{ gc_draw(chartTempsCommercialeAnalytique, 'chart_actions_co_temps_commerciale_analytique') }}
            {{ gc_draw(chartTempsCommercialeAnalytiqueRepartition, 'chart_actions_co_temps_commerciale_analytique_repartition') }}
            {{ gc_draw(chartTempsCommercialeAO, 'chart_actions_co_temps_commerciale_ao') }}
            {{ gc_draw(chartTempsCommercialeAORepartition, 'chart_actions_co_temps_commerciale_ao_repartition') }}
            {{ gc_draw(chartTempsCommercialePrivePublic, 'chart_actions_co_temps_commerciale_public_prive') }}
            {{ gc_draw(chartTempsCommercialePrivePublicRepartition, 'chart_actions_co_temps_commerciale_public_prive_repartition') }}

            AmCharts.ready(function() {
                $.ajax({
                    url: Routing.generate('crm_opportunite_chart_data', {'type': 'funnel'}),
                    success: function(data) {
                        handleDataFunnel(data);
                    }
                });
            });

            function handleDataFunnel(data) {

                var chart = new AmCharts.AmFunnelChart();
                chart.titleField = "title";
                chart.balloon.cornerRadius = 0;
                chart.marginRight = 220;
                chart.marginLeft = 15;
                chart.labelsEnabled = false;
                chart.funnelAlpha = 0.9;
                chart.valueField = "value";
                chart.dataProvider = data;
                chart.startX = 0;
                chart.balloon.animationTime = 0.2;
                chart.neckWidth = "50%";
                chart.startAlpha = 0;
                chart.neckHeight = "30%";
                chart.balloonText = "Statut : [[title]]<br/>Total des montants : [[value]] &euro;";

                var legend = new AmCharts.AmLegend();
                legend.valueText = "";
                legend.valueWidth = 0;
                chart.legend = legend;

                chart.write("chartdiv");
                $('a[title="JavaScript charts"]').addClass("hidden");
            }
        });
    </script>
{% endblock %}
