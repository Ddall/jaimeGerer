{% extends 'crm/crm_layout.html.twig' %}

{% block content %}

    <div class="row">
        <div class="col-md-12">
            {% include 'crm/action-commerciale/crm_action_commerciale_submenu.html.twig' %}
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 center-mobile">
            <h1>Reporting commercial</h1>
        </div>
    </div>
    
    <div class="row spacer-top hidden-xs">
        <div class="col-md-2"></div>
        <div class="col-md-4">
            <h3>Répartition par probabilité</h3>
            <div id="chartdiv" style="width: 600px; height: 300px; margin:auto;"></div>
        </div>
        <div class="col-md-1"></div>
        <div class="col-md-4">
            <h3>Taux de transformation {{ 'now'|date('Y') }}</h3>
            <div id="chart_taux_transformation_wrapper"></div>
        </div>
        <div class="col-md-2"></div>
    </div>
    <div class="row hidden-xs">
        <div class="col-md-2"></div>
        <div class="col-md-4">
            <h3>Répartition par type {{ 'now'|date('Y') }}</h3>
            <div id="chart_actions_co_analytique"></div>
        </div>
        <div class="col-md-1"></div>
        <div class="col-md-4">
            <h3>Répartition par lieu {{ 'now'|date('Y') }}</h3>
            <div id="chart_actions_co_rhone_alpes"></div>
        </div>
         <div class="col-md-2"></div>
    </div>

{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('lib/amcharts/amcharts/amcharts.js') }}" type="text/javascript"></script>
    <script src="{{ asset('lib/amcharts/amcharts/funnel.js') }}" type="text/javascript"></script>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

    <script type="text/javascript">


        $(document).ready(function() {

            /* charts */
            {{ gc_draw(chartTauxTransformation, 'chart_taux_transformation_wrapper') }}
            {{ gc_draw(chartActionsCoAnalytique, 'chart_actions_co_analytique') }}
            {{ gc_draw(chartActionsCoRhoneAlpes, 'chart_actions_co_rhone_alpes') }}

            AmCharts.ready(function() {
                $.ajax({
                    url: Routing.generate('crm_opportunite_chart_data', {'type': 'funnel'}),
                    success: function(data) {
                        handleDataFunnel(data);
                    }
                });

            });

            function handleDataFunnel(data) {

                var chart = new AmCharts.AmFunnelChart();
                chart.titleField = "title";
                chart.balloon.cornerRadius = 0;
                chart.marginRight = 220;
                chart.marginLeft = 15;
                chart.labelPosition = "right";
                chart.labelsEnabled = false;
                chart.funnelAlpha = 0.9;
                chart.valueField = "value";
                chart.dataProvider = data;
                chart.startX = 0;
                chart.balloon.animationTime = 0.2;
                chart.neckWidth = "40%";
                chart.startAlpha = 0;
                chart.neckHeight = "30%";
                chart.balloonText = "Statut : [[title]]<br/>Total des montants : [[value]] &euro;";

                chart.creditsPosition = "bottom-right";

                var legend = new AmCharts.AmLegend();
                legend.valueText = "";
                legend.valueWidth = 0;
                chart.legend = legend;

                chart.write("chartdiv");
                $('a[title="JavaScript charts"]').addClass("hidden");
            }

        });
    </script>
{% endblock %}
