<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" id="form_payment">
        <!-- bloody IE8 doesn't support JQuery >= 2 -->
        <!--[if (!IE)|(gt IE 8)]><!-->
        <script src="https://code.jquery.com/jquery-2.2.1.min.js"></script>
        <!--<![endif]-->
        <!--[if lte IE 8]>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
        <![endif]-->
        <style>
            #submit_payment {
                display: none;
            }
        </style>
    </head>
    <body>
    <form action="{{ urlPaypal }}" method="post" id="form_payment">
        <input type="hidden" name="business" value="{{ email }}" />
        <input type="hidden" name="cmd" value="_xclick" />
        <input type="hidden" name="item_name" value="{{ itemName }}" />
        <input type="hidden" name="item_number" value="{{ itemNumber }}" />
        <input type="hidden" name="amount" value="{{ amount }}" />
        <input type="hidden" name="currency_code" value="EUR" />
        <input type="hidden" name="bn" value="PP-BuyNowBF" />
        <input type="hidden" name="quantity" value="{{ quantity }}" />
        <input type="hidden" name="custom" value="{{ ref }}">
        <input type="hidden" name="notify_url" value="{{ urlNotify }}" />
        <input type="hidden" name="return" value="{{ urlReturn }}" />
        <input type="hidden" name="cancel_return" value="{{ urlCancel }}" />
        <input type="hidden" name="no_note" value="1" />
        <input type="hidden" name="no_shipping" value="1" />
        <input type="submit" id="submit_payment" />
    </form>
    </body>
    <script type="text/javascript">
        $(document).ready( function () {
            $('#submit_payment').click();
        });
    </script>
</html>