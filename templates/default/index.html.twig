{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('css/homepage20190408-1648.css') }}" type="text/css" />
{% endblock %}


{% block body %}
<div class="row center visible-xs" id="login-logo-wrapper" >
	<div class="col-md-12">
        <img src="{{ asset('images/assets/jaimegerer-logo-250.png') }}" alt="logo" title="J'aime Gérer" />
        <hr />
    </div>
</div>
<div class="wrap-index">
	<div class="row">
		<div class="col-md-12 center">
			<div class="wrap-index-head">
				<h1>{{ random(['Hello', 'Coucou', 'Hola', 'Bienvenue', 'My dear', 'Hooo, mais c\'est', 'Hey', 'Bonjour', 'Ho,', 'Salut']) }} {{ app.user.firstname }} !</h1>
				<p class="l">{{ random(['Te revoilà !', 'Je t\'ai manqué ?', 'A nous deux !', 'C\'est parti !', 'Quoi de neuf ?', 'On fait quoi aujourd\'hui ?', 'Welcome back !']) }}</p>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12 center">
		    <ul class="main_menu">

		    	{% if app.user.company.hasAccesFonctionnalite('CRM') %}
			    	<li id="commercial" class="active">
			    		<a href="{{ path('crm_index') }}">
			    			<img src="{{ asset('images/assets/commercial.png') }}" alt="CRM" />
			    			J'aime le commercial
			    		</a>
			    	</li>
		    	{% else %}
		 	    	<li id="emailing" class="inactive">
						<img src="{{ asset('images/assets/commercial.png') }}" alt="CRM" />
						J'aime le commercial
		 	    	</li>
		 	    {% endif %}

		    	{% if app.user.company.hasAccesFonctionnalite('EMAILING') %}
		    		<li id="emailing" class="active">
		 	    		<a href="{{ path('emailing_index') }}">
							<img src="{{ asset('images/assets/communication.png') }}" alt="Emailing" />
							J'aime communiquer
		 	    		</a>
		 	    	</li>
		 	    {% else %}
		 	    	<li id="emailing" class="inactive">
						<img src="{{ asset('images/assets/communication.png') }}" alt="Emailing" />
						J'aime communiquer
		 	    	</li>
		 	    {% endif %}
		    	
		    	{% if app.user.company.hasAccesFonctionnalite('COMPTA') %}
			    	<li id="compta" class="active">
			    		<a href="{{ path('compta_index') }}">
			    			<img src="{{ asset('images/assets/comptabilite.png') }}" alt="Comptabilité" />
			    			J'aime la compta
			    		</a>
			    	</li>
		 	    {% else %}
		 	    	<li id="emailing" class="inactive">
						<img src="{{ asset('images/assets/comptabilite.png') }}" alt="Comptabilité" />
						J'aime la compta
		 	    	</li>
		 	    {% endif %}

		    	<li class="inactive">
		    		<img src="{{ asset('images/assets/recrutement.png') }}" alt="Recrutement" />
		    		J'aime le recrutement
		    	</li>
		    </ul>
		</div>
	</div>		   
	<div class="row">
		<div class="col-md-12 center">
		    <ul class="main_menu">
		    	
		    	{% if app.user.company.hasAccesFonctionnalite('NDF') %}
			    	<li id="ndf" class="active">
			    		<a href="{{ path('ndf_recus_liste') }}">
				    		<img src="{{ asset('images/assets/ndf.png') }}" alt="Notes de frais" />
				    		J'aime les notes de frais
				    	</a>
			    	</li>
		 	    {% else %}
		 	    	<li id="ndf" class="inactive">
						<img src="{{ asset('images/assets/ndf.png') }}" alt="Notes de frais" />
						J'aime les notes de frais
		 	    	</li>
		 	    {% endif %}

		    	{% if app.user.company.isNicomak %}
			    	<li id="social" class="active">
			    		<a href="{{ path('social_index') }}">
				    		<img src="{{ asset('images/assets/jaimenicomak-colors.png') }}" alt="J'aime Nicomak" />
				    		J'aime {{ app.user.company }}
				    	</a>
			    	</li>
		    	{% endif %}

		    	{% if app.user.company.hasAccesFonctionnalite('TIME_TRACKER') %}
	    	    	<li id="time-tracker" class="active">
	    	    		<a href="{{ path('time_tracker_index') }}">
	    		    		<img src="{{ asset('images/assets/jaimecomptermontemps.png') }}" alt="J'aime compter mon temps" />
	    		    		J'aime compter mon temps
	    		    	</a>
	    	    	</li>
    	    	{% else %}
		 	    	<li id="time-tracker" class="inactive">
						<img src="{{ asset('images/assets/jaimecomptermontemps.png') }}" alt="J'aime compter mon temps" />
						J'aime compter mon temps
		 	    	</li>
		 	    {% endif %}
		   </ul>
	   </div>
	</div>
</div>
{% endblock %}
